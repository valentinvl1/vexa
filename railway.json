{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "services/transcription-collector/Dockerfile"
  },
  "deploy": {
    "startCommand": "sh -c \"uvicorn main:app --host 0.0.0.0 --port $PORT\"",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "REDIS_URL": "{{REDIS_URL}}"
  },
  "environments": {
    "production": {
      "variables": {
        "GLADIA_API_KEY": "{{GLADIA_API_KEY}}",
        "REDIS_STREAM_URL": "{{REDIS_URL}}",
        "REDIS_STREAM_KEY": "transcription_segments",
        "REDIS_SPEAKER_EVENTS_RELATIVE_STREAM_KEY": "speaker_events_relative",
        "SILENCE_THRESHOLD_SECONDS": "60",
        "VAD_THRESHOLD": "0.5",
        "LOG_LEVEL": "INFO"
      }
    },
    "development": {
      "variables": {
        "GLADIA_API_KEY": "{{GLADIA_API_KEY}}",
        "REDIS_STREAM_URL": "{{REDIS_URL}}",
        "REDIS_STREAM_KEY": "transcription_segments",
        "REDIS_SPEAKER_EVENTS_RELATIVE_STREAM_KEY": "speaker_events_relative",
        "SILENCE_THRESHOLD_SECONDS": "60",
        "VAD_THRESHOLD": "0.5",
        "LOG_LEVEL": "DEBUG"
      }
    }
  }
}
